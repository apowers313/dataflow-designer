{
    "include": [
        ".eslintrc.js",
        "packages/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "./build",
        "declaration": true,
        "strict": true,
        "sourceMap": true,
        "inlineSources": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "types": [
            "node",
            "mocha",
            "chai"
        ]
    },
    "typedocOptions": {
        "out": "docs",
        "entryPointStrategy": "packages",
        "entryPoints": [
            "."
        ],
        "excludePrivate": true
    }
}