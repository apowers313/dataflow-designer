  },
  "author": "Adam Powers <apowers@ato.ms>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "typedoc": {
    "entryPoint": "./index.ts",
    "readmeFile": "./README.md",
    "displayName": "Dataflow Validate Schema"
  },
  "dependencies": {
    "@dataflow-designer/dataflow-core": "^0.4.2",
    "ajv": "^8.11.0"
  }
