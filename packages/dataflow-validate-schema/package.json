{
  "name": "@dataflow-designer/dataflow-validate-schema",
  "version": "0.4.2",
  "description": "A dataflow utility for validating chunks based on a JSON Schema or JSON Type Definition",
  "engines": {
    "node": ">=18"
  },
  "main": "build/index.js",
